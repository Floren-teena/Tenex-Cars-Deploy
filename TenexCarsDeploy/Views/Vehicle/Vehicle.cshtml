@model IEnumerable<TenexCarsDeploy.Data.Models.Vehicle>
@{
    ViewData["Title"] = "Vehicle";
}

<div class="text-center">
    <h1 class="display-6">EDIT VEHICLE</h1>
    <div>
        @foreach (var vehicle in Model)
        {
            <div>
                <a class="nav-link" asp-area="" asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.Id">@vehicle.Make</a>
            </div>
        }
        <a class="btn btn-primary" asp-controller="Pay" asp-action="Index">Pay</a>
        <a class="btn btn-secondary" asp-controller="Pay" asp-action="Payments">View Payments</a>
    </div>
</div>
